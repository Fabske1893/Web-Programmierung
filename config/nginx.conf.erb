worker_processes 1;

events { worker_connections 1024; }

http {
  include       mime.types;
  default_type  application/octet-stream;
  sendfile        on;

  server {
    listen <%= ENV["PORT"] %>;
    server_name _;

    root /app;

    location / {
      try_files $uri /index.html;
      add_header Access-Control-Allow-Origin *;
    }

    location ~* \.(?:ico|css|js|gif|jpe?g|png|woff2?|ttf|svg)$ {
      add_header Access-Control-Allow-Origin *;
      expires 30d;
      access_log off;
    }
  }
}
